
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{

    <script src="~/Scripts/app/controller/questionController.js"></script>
    <script>
        var question = new questionController();
        question.initialize();
    </script>
}

<div class="row" style="float:right">
    <form class="form-inline" id="formLogin">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Tên đăng nhập" />
        </div>
        <div class="col-md-4">
            <input type="password" class="form-control" placeholder="Mật khẩu" />
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary" type="submit">Đăng nhập</button>
        </div>
    </form>
</div>
<div class="clearfix"></div>

<div class="row" style="padding-top:15px">
    <div class="col-md-8">
        <div class="alert alert-primary" role="alert">
            Đăng nhập để gởi ý kiến/câu hỏi về cho chúng tôi
        </div>
        <form>
            <textarea class="form-control col-md-12" id="txtFeedback" rows="10" cols="170" placeholder="Bạn hãy nhập nội dung cụ thể vào đây"></textarea>
            <button type="submit" class="btn btn-outline-primary" id="btnSend" style="float:right"> Đăng kí/Gởi </button>
        </form>
    </div>
</div>

