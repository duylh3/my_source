
@{
    ViewBag.Title = "CauHoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/app/controller/questionController.js"></script>

    <script>
        var question = new questionController();
        question.initialize();
    </script>
}

<h4>Question</h4>
<div class="row">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Sequence</th>
                <th>Question</th>
                <th>Category</th>
                <th>CreatedBy</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tbl-content"></tbody>
    </table>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td class="col-seq">{{Sequence}}</td>
        <td>{{{Question}}}</td>
        <td>{{Category}}</td>
        <td>{{CreatedBy}}</td>
        <td class="text-center" scope="row">
            <button class="btn  btn-sm btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></button>
        </td>
    </tr>
</script>



<script>
    $.ready(function () {
        $("#Salary").click(function () {
            var cate = $(this).attr("id");
            alert(cate);
            var template = $("#table-template").html();
            var render = "";
            $.ajax({
                type: "GET",
                data: {
                    cate: cate
                },
                url: "/QA/GetData",
                dataType: "json",
                success: function (response) {
                    if (response.Results.length === 0) {
                        $("#tbl-content").html("");
                        $("#tbl-content").append($("<tr>").append($("<td>").attr("colspan", 8).html("There is no data to display!!").addClass("text-center")));
                    }
                    $.each(response.Results, function (i, item) {
                        render += Mustache.render(template, {
                            Sequence: i + 1,
                            Id: item.Id,
                            Question: item.Question,
                            Category: item.Category,
                            CreatedBy: item.CreatedBy
                        });
                        alert(render);
                        if (render != "") {
                            $("#tbl-content").html(render);
                        }
                    })
                },
                error: function (status) {
                    console.log(status);
                }
            });
        });
    });
</script>